        <div class="terminal-input">
            <input type="text" id="terminal-input" autofocus placeholder="Nombre">
        </div>
    </div>
    <script src="script.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const terminalInput = document.getElementById('terminal-input');
            const userInputDisplay = document.getElementById('user-input-display');
            
            terminalInput.addEventListener('input', function() {
                userInputDisplay.textContent = this.value;
            });
            
            terminalInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    const input = this.value.trim();
                    
                    // Añadir el comando a la terminal
                    addLineToTerminal('> ' + input);
                    
                    // Verificar si el input contiene "Alpharius" (sin distinguir mayúsculas/minúsculas)
                    if (input.toLowerCase().includes('alpharius')) {
                        addLineToTerminal('Acceso concedido. Redirigiendo...');
                        setTimeout(function() {
                            window.location.href = '../fase1/alpharius.html';
                        }, 1000);
                    } else {
                        addLineToTerminal('Acceso no autorizado a su persona.');
                    }
                    
                    // Limpiar el input
                    this.value = '';
                    userInputDisplay.textContent = '';
                }
            });
        });
    </script>
